@{
    ViewData["Title"] = "Result";
    var questions = ViewBag.Questions as List<Backend3.Models.QuizQuestion>;
    var answers = ViewBag.UserAnswers as List<int?>;
}

<h2>Результат</h2>
<p>Правильных: @ViewBag.CorrectCount / @ViewBag.Total</p>

<ol>
@for (int i = 0; i < questions.Count; i++)
{
    <li>
        @questions[i].Text = @answers[i] 
        @if (answers[i] == questions[i].CorrectAnswer) { <span class="text-success">✓</span> } else { <span class="text-danger">✗ (правильно: @questions[i].CorrectAnswer)</span> }
    </li>
}
</ol>
